# Telegram Bot Configuration
# Copy this file to .env and fill in your actual values

# Required: Get this from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# Required: Your Telegram user ID (you can get this from @userinfobot)
OWNER_ID=your_user_id_here

# Optional: Webhook settings for deployment
USE_WEBHOOK=false
WEBHOOK_URL=https://your-domain.com
PORT=5000

# Optional: File processing settings
MAX_FILE_SIZE=5368709120
DOWNLOAD_PATH=./downloads
TEMP_PATH=./temp
DEFAULT_FORMAT={title}

# Optional: Database settings
DATABASE_PATH=bot_data.db

# Optional: Logging and rate limiting
LOG_LEVEL=INFO
RATE_LIMIT_REQUESTS=5
RATE_LIMIT_WINDOW=60
